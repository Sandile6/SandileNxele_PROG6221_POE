<Window x:Class="SanelePoe.AddStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SanelePoe"
        mc:Ignorable="d"
        Title="Add Step" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Step Description:" Margin="0,0,0,10"/>
            <TextBox x:Name="StepDescriptionTextBox" Width="300" Margin="0,0,0,10"/>
            <Button Content="Save Step" Click="SaveStep_Click" Width="150" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>