<Window x:Class="SanelePoe.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SanelePoe"
        mc:Ignorable="d"
        Title="Add Recipe" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Recipe Name:" Margin="0,0,0,10"/>
            <TextBox x:Name="RecipeNameTextBox" Width="200" Margin="0,0,0,20"/>

            <TextBlock Text="Ingredients:" Margin="0,0,0,10"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click" Width="150" Margin="0,0,0,10"/>
            <ListBox x:Name="IngredientsListBox" Height="100" Margin="0,0,0,20"/>

            <TextBlock Text="Steps:" Margin="0,0,0,10"/>
            <Button Content="Add Step" Click="AddStep_Click" Width="150" Margin="0,0,0,10"/>
            <ListBox x:Name="StepsListBox" Height="100" Margin="0,0,0,20"/>

            <Button Content="Save Recipe" Click="SaveRecipe_Click" Width="150"/>
        </StackPanel>
    </Grid>
</Window>
